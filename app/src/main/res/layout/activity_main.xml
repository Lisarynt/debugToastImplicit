<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/website_edit_text"
        android:text="http://developer.android.com"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_website_button"
        android:layout_marginBottom="24dp"
        android:text="Open Website"
        android:onClick="openWebsite"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_edit_text"
        android:text="Universitas Teknologi Bandung"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_button"
        android:layout_marginBottom="24dp"
        android:text="Open Website"
        android:onClick="openLocation"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/share_edit_text"
        android:text="Text yang akan dishare"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_text_button"
        android:layout_marginBottom="24dp"
        android:text="Share Text Button"
        android:onClick="shareText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edittext_bundar"
        android:id="@+id/implicit_edit_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/implicit_button"
        android:layout_marginBottom="24dp"
        android:text="Implicit"
        android:onClick="sendData"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>